{
  "compilerOptions": {
    "newLine": "LF",
    "target": "ES2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017",
      "dom.iterable",
      "scripthost",
      "esnext.asynciterable"
    ],
    "strict": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "index.ts",
    "views/**/*.tsx",
    "lib/**/*.ts",
    "test/**/*.ts",
    "public/**/*.ts"
  ],
  "exclude": [
    ".#*"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
